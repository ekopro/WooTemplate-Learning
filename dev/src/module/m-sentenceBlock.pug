mixin block(name,link,image, ...classGrid)
  div(class = "m-sentenceBlock"+ name + classGrid)
    a(href=link)
      img(src=image class="m-sentenceBlock" +name+ 'Img')

  

div(class="m-sentenceBlock")
  div(class = "m-sentenceBlockJoin")
    img(src = require("./img/big_img1.jpg") class="m-sentenceBlockJoinImg")  
    button(class="m-sentenceBlockJoinButton button-green" id="m-sentenceBlockJoinButton") Join now
  div(class="row m-sentenceBlockCatLink")
      +block("Best","#",require("./img/banner_bg1-1.jpg")," col-xs-12 col-sm-6 col-md-6 col-lg-6")
      +block("Food","#",require("./img/banner_bg2-1.jpg")," col-xs-12 col-sm-3 col-md-3 col-lg-3")
      +block("Sale","#",require("./img/banner_bg3-1.jpg")," col-xs-12 col-sm-3 col-md-3 col-lg-3")

  div(class="row")
      +block("Arrivals","#",require("./img/banner4.png")," col-xs-12 col-sm-4 col-md-4 col-lg-4 ")
      +block("Favorite","#",require("./img/banner5.png")," col-xs-12 col-sm-4 col-md-4 col-lg-4 ")
      +block("Shipping","#",require("./img/banner6.png")," col-xs-12 col-sm-4 col-md-4 col-lg-4 ")
  
